@model IEnumerable<Chocolate>

@{
    ViewData["Title"] = "Comprar Kakauu";
}
<style>
    .bg-info {
        background-color: #654321 !important;
    }

    .card-img-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px; /* Altura definida para as imagens */
    }

        .card-img-container img {
            width: 100%;
            height: auto;
            object-fit: cover;
            max-height: 100%; /* Garante que a imagem não ultrapasse a altura do contêiner */
        }
</style>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info" style="background-color: #654321;">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    @{
                                        if (!string.IsNullOrEmpty(item.ChocolateProcessing) && int.TryParse(item.ChocolateProcessing, out var chocolateProcessingValue) && chocolateProcessingValue > 0)
                                        {
                                            @($"{item.ChocolateProcessing}%")
                                        }
                                    }

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 card-img-container">
                        <img src="@item.imageURL" class="img-fluid" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text"><b>Chocolate: </b>@item.ChocolateTypek</p>
                            <p class="card-text"><b>Sabor: </b>@item.Flavor</p>
                            <p class="card-text"><b>Validade: </b>@item.Validity</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" style="border-color: #654321; color: #654321;">
                                    <i class="bi bi-eye-fill"></i> Mostrar Detalhes
                                </a>
                                <a class="btn btn-success text-white" style="background-color: #654321; border-color: #654321;">
                                    <i class="bi bi-cart-plus"></i>   @item.price.ToString("c")
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
