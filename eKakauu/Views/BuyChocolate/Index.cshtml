@model IEnumerable<Chocolate>

@{
    ViewData["Title"] = "Comprar Kakauu";
}
<style>
    .bg-info {
        background-color: #654321 !important;
    }
</style>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info" style="background-color: #654321;">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name @item.ChocolateProcessing
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.imageURL" class="img-fluid" style="height: 200px; object-fit: cover;" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text"><b>Chocolate: </b>@item.ChocolateTypek</p>
                            <p class="card-text"><b>sabor: </b>@item.Flavor</p>
                            <p class="card-text"><b>Validade: </b>@item.Validity</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" style="border-color: #654321; color: #654321;">
                                    <i class="bi bi-eye-fill"></i> Mostrar Detalhes</a>
                                <a class="btn btn-success text-white" style="background-color: #654321; border-color: #654321;">
                                    <i class="bi bi-cart-plus"></i>   @item.price.ToString("c")</a>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
