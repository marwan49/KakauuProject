@model IEnumerable<Chocolate>

@{
    ViewData["Title"] = "Gerenciamento de Produtos";
}

<style>
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 150px;
        max-height: 150px;
    }

        .image-container img {
            width: 100%;
            height: auto;
            max-width: 150px; /* Largura máxima da imagem */
            max-height: 150px; /* Altura máxima da imagem */
            object-fit: cover;
        }
</style>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.imageURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Flavor)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <div class="image-container">
                                <img class="rounded-circle" src="@item.imageURL" alt="@item.Name" />
                            </div>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Flavor)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Editar</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalhes</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
<div style="position: fixed; right: 25px; bottom: 25px" class="text-white">
    <a asp-controller="Chocolates" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Adicionar Novo
    </a>
</div>
